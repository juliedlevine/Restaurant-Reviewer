<!DOCTYPE html>

<div class="title">
    <h2>{{name}}</h2>
    {{#if favorite}}
        <img src="/like.png" alt="heart" class="heart favorite">
    {{else}}
        <img src="/heart.png" alt="heart" class="heart not-favorite">
    {{/if}}
</div>


<h4>Address: {{address}}</h4>
<h4>Category: {{category}}</h4>
<p id = "hidden-id">{{id}}</p>

{{#if avg_stars}}
    <h4>Average stars: {{avg_stars}}</h4>
    <br>
        <h4>Reviews: </h4>
        <ol>
            {{#each reviews}}
                <li>Review by {{reviewer_name}}: {{title}} </li>
                    <ul>
                        <li>{{stars}} stars</li>
                        <li>{{review}}</li>
                    </ul>
                    <br>
            {{/each}}
        </ol>
    <br>
{{/if}}


<br>
<h4>Write a review:</h4>
<div class="container">
    <form action="/restaurant/addReview/{{id}}" method="POST">
        <div class="form-group">
            <label>Review Title:</label>
            <input type="text" name="title" class="form-control form-input">
        </div>

        <br>
        <div class="form-group">
            <p>Stars:</p>
            <div class="radio">
                <label>
                    <input type="radio" name="stars" value="5">
                    <p>5 stars</p>
                </label>
            </div>
            <div class="radio">
                <label>
                    <input type="radio" name="stars" value="4">
                    <p>4 stars</p>
                </label>
            </div>
            <div class="radio">
                <label>
                    <input type="radio" name="stars" value="3">
                    <p>3 stars</p>
                </label>
            </div>
            <div class="radio">
                <label>
                    <input type="radio" name="stars" value="2">
                    <p>2 stars</p>
                </label>
            </div>
            <div class="radio">
                <label>
                    <input type="radio" name="stars" value="1">
                    <p>1 star</p>
                </label>
            </div>
        </div>

        <div class="form-group review-text">
            <label>Review:</label>
            <textarea name="review" rows="8" cols="5" class="form-control"></textarea>
        </div>

        <input type="submit" name="submit" value="Submit" class="submit">
    </form>
</div>
